{
  "dataset": {
    "path": "./data/ep2-train.csv",
    "text_column": 0,
    "label_column": 1,
    "test_size": 0.3,
    "random_state": 42,
    "stratify": true
  },
  "vectorizers": [
    {
      "name": "word2vec_default",
      "class": "Word2VecVectorizer",
      "params": {
        "vector_size": 100,
        "window": 5,
        "min_count": 2,
        "workers": 4,
        "epochs": 50
      }
    },
    {
      "name": "tfidf_default",
      "class": "TfidfVectorizerWrapper",
      "params": {
        "max_features": 5000,
        "ngram_range": [1, 2],
        "min_df": 2
      }
    }
  ],
  "classifiers": [
    {
      "name": "random_forest_default",
      "class": "RandomForestTextClassifier",
      "params": {
        "n_estimators": 200,
        "max_depth": null,
        "n_jobs": -1,
        "random_state": 42,
        "verbose": 1
      }
    },
    {
      "name": "logistic_regression_default",
      "class": "LogisticRegressionClassifier",
      "params": {
        "max_iter": 1000,
        "solver": "liblinear",
        "multi_class": "ovr",
        "verbose": 1
      }
    }
  ]
}
