{
  "dataset": {
    "path": "./data/ep2-train.csv",
    "test_size": 0.3,
    "random_state": 42,
    "stratify": true
  },
  "limits": {
    "cv_folds": 1,
    "max_dense_gb": 5.0,
    "corr_thresh": 0.6,
    "double_fault_thresh": 0.12,
    "max_models": 7
  },
  "vectorizers": [],
  "vectorizers_grid": [
    {
      "name_template": "tfidf_w_{ngram_range}_{max_features}",
      "class": "TfidfVectorizerWrapper",
      "params": {
        "max_features": [
          5000,
          10000,
          20000
        ],
        "ngram_range": [
          [
            1,
            2
          ],
          [
            1,
            3
          ],
          [
            2,
            5
          ]
        ],
        "min_df": [
          2
        ]
      }
    },
    {
      "name_template": "tfidf_c_{ngram_range}_{max_features}",
      "class": "TfidfVectorizerWrapper",
      "params": {
        "analyzer": [
          "char"
        ],
        "ngram_range": [
          [
            3,
            5
          ],
          [
            4,
            6
          ],
          [
            1,
            10
          ]
        ],
        "max_features": [
          5000,
          10000,
          50000
        ],
        "min_df": [
          2
        ]
      }
    },
    {
      "name_template": "w2v_{vector_size}d_e{epochs}",
      "class": "Word2VecVectorizer",
      "params": {
        "vector_size": [
          100,
          200,
          300
        ],
        "epochs": [
          15,
          25
        ],
        "window": [
          5
        ],
        "min_count": [
          2
        ],
        "workers": [
          4
        ],
        "seed": [
          42
        ]
      }
    },
    {
      "name_template": "ft_{vector_size}d_e{epochs}",
      "class": "FastTextVectorizer",
      "params": {
        "vector_size": [
          100,
          200
        ],
        "epochs": [
          10,
          20
        ],
        "window": [
          5
        ],
        "min_count": [
          2
        ],
        "workers": [
          4
        ],
        "seed": [
          42
        ]
      }
    }
  ],
  "classifiers": [],
  "classifiers_grid": [
    {
      "name_template": "lr_liblinear_C{C}",
      "type": "logreg",
      "params": {
        "solver": [
          "liblinear"
        ],
        "multi_class": [
          "ovr"
        ],
        "C": [
          0.5,
          1.0,
          2.0
        ]
      }
    },
    {
      "name_template": "lr_saga_C{C}",
      "type": "logreg",
      "params": {
        "solver": [
          "saga"
        ],
        "penalty": [
          "l2"
        ],
        "n_jobs": [
          -1
        ],
        "C": [
          0.5,
          1.0,
          2.0
        ]
      }
    },
    {
      "name_template": "rf_{n_estimators}_d{max_depth}",
      "type": "rf",
      "params": {
        "n_estimators": [
          200,
          500
        ],
        "max_depth": [
          null,
          20,
          40
        ],
        "n_jobs": [
          -1
        ],
        "random_state": [
          42
        ]
      }
    },
    {
      "name_template": "mlp_{hidden_layer_sizes}_a{alpha}",
      "type": "mlp",
      "params": {
        "hidden_layer_sizes": [
          [
            256,
            128
          ],
          [
            128,
            64
          ],
          [
            256
          ]
        ],
        "alpha": [
          0.0001,
          0.0005
        ],
        "activation": [
          "relu"
        ],
        "learning_rate": [
          "adaptive"
        ],
        "max_iter": [
          400
        ],
        "random_state": [
          42
        ]
      }
    },
    {
      "name_template": "xgb_n{n_estimators}_d{max_depth}_lr{learning_rate}_ss{subsample}_cs{colsample_bytree}",
      "type": "xgb",
      "params": {
        "n_estimators": [
          300,
          600
        ],
        "max_depth": [
          6,
          8
        ],
        "learning_rate": [
          0.05,
          0.1
        ],
        "subsample": [
          0.8,
          1.0
        ],
        "colsample_bytree": [
          0.8,
          1.0
        ]
      }
    }
  ]
}